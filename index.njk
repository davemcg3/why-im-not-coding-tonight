---
layout: base-layout.njk
title: Coding|Not Coding
pagination:
  data: collections.post
  size: 12
  reverse: true
  alias: posts
---
<cards>
  {% for post in posts %}
    <card class="borderBlinkReverse">
      <h1>
        <a href="{{ post.url | url }}">{{ post.data.title }}</a>
      </h1>
      <time datetime="{{ post.date | dateIso }}">{{ post.date | dateReadable }}</time>

      <div class="{% glitch? %} glitcher" data-text="{% strippedExcerpt post %}">
        {% excerpt post %}
      </div>

      <a href="{{ post.url | url }}"
         aria-label="Read post on {{ post.data.title }}">
           <button class="cybr-btn">
             Read Post<span aria-hidden></span>
             <span aria-hidden class="cybr-btn__glitch">Read Post</span>
             <span aria-hidden class="cybr-btn__tag">R25</span>
           </button>
         </a>
    </card>
  {% endfor %}
</cards>
